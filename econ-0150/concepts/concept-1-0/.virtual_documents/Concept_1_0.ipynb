# Load Dataset
optimism = pd.read_csv(file_path + 'economic_optimism.csv')

# Figure
plt.figure(figsize=(8, 3))
order = [
    'Very Optimistic',
    'Somewhat Optimistic',
    'Neutral',
    'Somewhat Pessimistic', 
    'Very Pessimistic', 
]
