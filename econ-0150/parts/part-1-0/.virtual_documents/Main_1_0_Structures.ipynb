# Load Dataset
time_series = pd.read_csv('data/us_real_gdp.csv')

# Figure
plt.figure(figsize=(10, 4))
sns.histplot(data=time_series, x='Real_GDP', edgecolor='black', stat='count', alpha=1)

# Styling
plt.title("Distribution of GDP")
